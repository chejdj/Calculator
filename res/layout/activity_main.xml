             android:background="#ffffff"
             android:layout_weight="1"
             android:textColor="#ffcc00"/>
     </LinearLayout>
     <LinearLayout
          android:layout_weight="1"
         android:layout_width="fill_parent"
         android:layout_height="55dp"
         android:orientation="horizontal"
         >
         <Button
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:id="@+id/si"
             android:text="4"
             android:background="#ffffff"
             android:layout_weight="1"
             android:textColor="#ffcc00"/>
