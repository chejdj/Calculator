             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:id="@+id/guohao"
             android:text="()"
             android:background="#ffffff"
             android:layout_weight="1"
             android:textColor="#ffcc00"/>
           <Button
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:id="@+id/houtui"
             android:text="->"
             android:layout_weight="1"
             android:background="#ffffff"
             android:textColor="#ffcc00"/>
