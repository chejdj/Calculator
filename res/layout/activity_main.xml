         android:layout_width="fill_parent"
         android:layout_height="55dp"
         android:orientation="horizontal"
         >
         <Button
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:id="@+id/yi"
             android:text="1"
             android:background="#ffffff"
             android:layout_weight="1"
             android:textColor="#ffcc00"/>
          <Button
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:id="@+id/er"
             android:text="2"
             android:background="#ffffff"
             android:layout_weight="1"
             android:textColor="#ffcc00"/>
